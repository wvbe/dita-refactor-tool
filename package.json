{
	"version": "0.1.0",
	"license": "MIT",
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"files": [
		"dist",
		"src"
	],
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"start": "tsdx watch",
		"build": "tsdx build",
		"test": "tsdx test",
		"lint": "tsdx lint",
		"prepare": "tsdx build",
		"size": "size-limit",
		"format": "prettier \"{src,bin}/**/*.{ts,js,json}\" --write",
		"analyze": "size-limit --why"
	},
	"bin": {
		"dita-move": "./bin/move.js"
	},
	"peerDependencies": {},
	"husky": {
		"hooks": {
			"pre-commit": "tsdx lint"
		}
	},
	"prettier": {
		"printWidth": 100,
		"semi": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "none",
		"useTabs": true
	},
	"name": "fonto-documentation-tool",
	"author": "wvbe",
	"module": "dist/fonto-documentation-tool.esm.js",
	"size-limit": [
		{
			"path": "dist/fonto-documentation-tool.cjs.production.min.js",
			"limit": "10 KB"
		},
		{
			"path": "dist/fonto-documentation-tool.esm.js",
			"limit": "10 KB"
		}
	],
	"devDependencies": {
		"@size-limit/preset-small-lib": "^4.10.2",
		"@types/fs-extra": "^9.0.11",
		"@types/glob": "^7.1.3",
		"@types/inquirer": "^7.3.1",
		"husky": "^6.0.0",
		"size-limit": "^4.10.2",
		"tsdx": "^0.14.1",
		"tslib": "^2.2.0",
		"typescript": "^4.2.4"
	},
	"dependencies": {
		"ask-nicely": "^4.0.4",
		"chalk": "^4.1.1",
		"fontoxpath": "^3.17.2",
		"fs-extra": "^9.1.0",
		"glob": "^7.1.6",
		"inquirer": "^8.0.0",
		"slimdom": "^2.3.2",
		"slimdom-sax-parser": "^1.4.0"
	}
}
